<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:width">325dp</item>
        <item name="android:height">57dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/philosopher_bold</item>
    </style>

    <style name="CustomLinearLayout">
        <item name="android:background">@drawable/background_with_shadow</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CustomTransparentButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/philosopher_bold</item>
    </style>

</resources>